# ============================================================================
# PhishGuard Environment Configuration
# ============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env to git!

# ============================================================================
# APPLICATION
# ============================================================================
APP_NAME=PhishGuard
APP_VERSION=0.1.0
ENVIRONMENT=development
DEBUG=true

# ============================================================================
# DATABASE
# ============================================================================
DATABASE_URL=postgresql://postgres:postgres_dev_password@localhost:5432/phishguard

# ============================================================================
# REDIS
# ============================================================================
REDIS_URL=redis://localhost:6379/0

# ============================================================================
# SECURITY
# ============================================================================
# IMPORTANT: Generate a strong secret key for production!
# You can generate one with: openssl rand -hex 32
SECRET_KEY=dev_secret_key_change_in_production_CHANGE_THIS_NOW
ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30
REFRESH_TOKEN_EXPIRE_DAYS=7

# ============================================================================
# CORS
# ============================================================================
CORS_ORIGINS=["http://localhost:3000", "http://127.0.0.1:3000"]

# ============================================================================
# AI SERVICE (Optional for now)
# ============================================================================
AI_PROVIDER=anthropic
AI_API_KEY=
AI_MODEL=claude-3-5-sonnet-20241022

# ============================================================================
# EMAIL SERVICES (Fill in when ready to test email injection)
# ============================================================================
# Microsoft Graph API
MICROSOFT_CLIENT_ID=
MICROSOFT_CLIENT_SECRET=
MICROSOFT_TENANT_ID=

# Google Workspace API
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=

# ============================================================================
# SMS SERVICE (Optional - for SMS phishing simulations)
# ============================================================================
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_PHONE_NUMBER=

# ============================================================================
# CELERY (Background Tasks)
# ============================================================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0

# ============================================================================
# STORAGE (Optional - for file uploads)
# ============================================================================
S3_BUCKET=
S3_ACCESS_KEY=
S3_SECRET_KEY=
S3_ENDPOINT_URL=
